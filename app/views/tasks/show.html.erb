<h1> Task Page </h1>

<h2>Task: <%= @task.title %></h2>
<ul>
<li>Details: <%= @task.details %></li>
  <li>Completed? <%= @task.completed %></li>
</ul>
<%= link_to "Edit Task", edit_path(@task) %>
<%= link_to "Back to Task List", tasks_path %>
<%= link_to 'Delete', destroy_path(@task),
      data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}
    %>
